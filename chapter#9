Program bha 5 integer input lana ha or show karna wa pointer ka use kar ka

int arr[5];
int *ptr;

for(int i=0; i<5; i++){
    cout<<"Enter the number ::> ";
    cin>>arr[i];
}ptr=arr;
for(int i=0; i<5; i++)
{cout<<*ptr<<"\t";
*ptr++;
}

float  arr[5];
float *ptr;
for(int i=0; i<5; i++){
    cout<<"Enter the number ::> ";
    cin>>arr[i];
}
ptr=&arr[4];
for(int i=0; i<5; i++){
    cout<<" "<<*ptr<<"\t";
    *ptr++;
}


